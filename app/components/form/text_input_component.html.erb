<% if label? %>
  <%= content_tag :div, class: "mb-2 text-600" do %>
    <%= label %>
  <% end %>
<% end %>
<%= content_tag :div, data: {accessories: class_names(leading: accessory_leading?, trailing: accessory_trailing?, leadingCap: accessory_leading_cap?, trailingCap: accessory_trailing_cap?)}, class: "flex relative grow [&_input]:data-[accessories~=leading]:!pl-8 [&_input]:data-[accessories~=trailing]:!pr-8 [&_select]:data-[accessories~=leading]:!pl-8 [&_select]:data-[accessories~=trailing]:!pr-8 [&_input]:data-[accessories~=trailingCap]:!rounded-r-none" do %>
  <%= input %>
  <%= accessory_leading %>
  <%= accessory_trailing %>
  <%= accessory_leading_cap %>
  <%= accessory_trailing_cap %>
<% end %>
